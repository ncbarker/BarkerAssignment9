@{
    ViewData["Title"] = "Add a Movie";
}

@model BarkerAssignment9.Models.FormResponse
<h1>@ViewData["Title"]</h1>

<p>Add a movie to my collection.</p>


<div style="justify-content:center" class="justify-content-md-center">
    <form asp-action="FilmForm" method="post">
        <div>
            <label asp-for="Category">Category:</label>
            <select asp-for="Category" required>
                <option>--</option>
                <option>Action/Adventure</option>
                <option>Comedy</option>
                <option>Drama</option>
                <option>Family</option>
                <option>Horror/Suspense</option>
                <option>Miscellaneous</option>
                <option>Television</option>
                <option>VHS</option>
            </select>
        </div>
        <div>
            <label asp-for="Title">Title:</label>
            <input asp-for="Title" required />
        </div>
        <div>
            <label asp-for="Year">Year:</label>
            <input asp-for="Year" required />
        </div>
        <div>
            <label asp-for="Director">Director:</label>
            <input asp-for="Director" required />
        </div>
        <div>
            <label asp-for="Rating">Rating:</label>
            <select asp-for="Rating" required>
                <option>--</option>
                <option>G</option>
                <option>PG</option>
                <option>PG-13</option>
                <option>R</option>
            </select>
        </div>
        <div>
            <label asp-for="Edited">Edited?</label>
            <input asp-for="Edited" type="checkbox" />
        </div>
        <div>
            <label asp-for="LentTo">Lent to:</label>
            <input asp-for="LentTo" />
        </div>
        <div>
            <label asp-for="Notes">Notes:</label>
            <input asp-for="Notes" maxlength="25" />
        </div>
        <br />
        <br />
        <button type="submit">Add film to collection</button>

    </form>
</div>

